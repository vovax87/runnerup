<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:layout_box="all">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center">

                <android.support.wearable.view.CircledImageView
                    android:id="@+id/icon_start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_av_play_arrow"
                    app:circle_border_width="0dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/gpsinfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/gps_info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/GPS_satellites" />

                    <TextView
                        android:id="@+id/gps_info1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/gps_info_text" />

                    <TextView
                        android:id="@+id/gps_info2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/gps_info1" />
                    <TextView
                        android:id="@+id/hr_info"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/gps_info2"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/hr_value_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="\?"
                      />
                </RelativeLayout>

                <Button
                    android:id="@+id/start_button"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_green"
                    android:enabled="true"
                    android:text="@string/Start_GPS"
                    android:drawableRight="@drawable/ic_av_play_arrow"
                     />
            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

</android.support.wearable.view.BoxInsetLayout>